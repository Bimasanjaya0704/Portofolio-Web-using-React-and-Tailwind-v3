# Aturan caching untuk semua file
/*
  Cache-Control: public, max-age=31536000, immutable  # 1 tahun untuk file statis

# Aturan khusus untuk tipe file
/images/*
  Cache-Control: public, max-age=31536000, immutable  # 1 tahun untuk gambar

/css/*
  Cache-Control: public, max-age=31536000, immutable  # 1 tahun untuk CSS

/js/*
  Cache-Control: public, max-age=31536000, immutable  # 1 tahun untuk JavaScript

/index.html
  Cache-Control: no-cache  # Selalu ambil versi terbaru untuk halaman utama
